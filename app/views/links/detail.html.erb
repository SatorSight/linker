<% provide(:title, "Edit user") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@link) do |f| %>

      <%= f.label 'Link' %>
      <%= f.text_field :value, class: 'form-control' %>

      <%= f.label 'Comment' %>
      <%= f.text_field :comment, class: 'form-control' %>
      <br>
      <%= f.submit "Save changes", data: { disable_with: false }, class: "btn btn-primary" %>

    <% end %>
    <br>
    <%= link_to "Delete", @link, method: :delete, class: "red",
                                  data: { confirm: "You sure?" } %>
  </div>
</div>